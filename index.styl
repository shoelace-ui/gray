/**
 * Define gray variations.
 */

gray--base     ?= #aaa
gray--light    ?= lighten(gray--base, 10%)
gray--lighter  ?= lighten(gray--base, 20%)
gray--lightest ?= lighten(gray--base, 30%)
gray--dark     ?= darken(gray--base, 10%)
gray--darker   ?= darken(gray--base, 20%)
gray--darkest  ?= darken(gray--base, 30%)
